{
	"name": "cavemanlearn-app",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"test": "vitest run --project unit",
		"test:ci": "vitest run --coverage",
		"test:watch": "vitest --project unit",
		"pretest:coverage": "pnpm db:reset",
		"test:coverage": "vitest run --coverage",
		"pretest:integration": "pnpm db:reset",
		"test:integration": "vitest run --project integration",
		"pretest:integration:watch": "pnpm db:reset",
		"test:integration:watch": "vitest --project integration",
		"pretest:all": "pnpm db:reset",
		"test:all": "vitest run",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"lint": "eslint",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write .",
		"check": "prettier --write . && eslint --fix",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit pull",
		"db:studio": "drizzle-kit studio",
		"db:reset": "docker compose down -v && docker compose up -d && tsx scripts/wait-for-db.ts && drizzle-kit push",
		"i18n:generate": "npx @inlang/paraglide-js compile --project ./project.inlang --outdir ./src/paraglide --emit-ts-declarations"
	},
	"dependencies": {
		"@clerk/backend": "^2.29.3",
		"@clerk/clerk-react": "^5.49.0",
		"@t3-oss/env-core": "^0.13.8",
		"@tailwindcss/vite": "^4.0.6",
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-form": "^1.0.0",
		"@tanstack/react-query": "^5.66.5",
		"@tanstack/react-query-devtools": "^5.84.2",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/react-router-devtools": "^1.132.0",
		"@tanstack/react-router-ssr-query": "^1.131.7",
		"@tanstack/react-start": "^1.132.0",
		"@tanstack/router-plugin": "^1.132.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.0",
		"lucide-react": "^0.561.0",
		"nitro": "npm:nitro-nightly@latest",
		"pg": "^8.16.3",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"svix": "^1.84.1",
		"tailwindcss": "^4.0.6",
		"vite-tsconfig-paths": "^6.0.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@clerk/testing": "^1.13.29",
		"@eslint/js": "^9.39.2",
		"@inlang/paraglide-js": "^2.8.0",
		"@inlang/plugin-m-function-matcher": "^2.1.3",
		"@inlang/plugin-message-format": "^4.2.0",
		"@playwright/test": "^1.57.0",
		"@tanstack/devtools-vite": "^0.3.11",
		"@tanstack/eslint-config": "^0.3.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.10.2",
		"@types/pg": "^8.15.6",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@typescript-eslint/eslint-plugin": "^8.53.0",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/coverage-v8": "^4.0.17",
		"@vitest/eslint-plugin": "^1.6.6",
		"babel-plugin-react-compiler": "^1.0.0",
		"dotenv": "^16.0.0",
		"eslint": "^9.39.2",
		"eslint-plugin-jsx-a11y": "^6.10.2",
